<!-- Боковое мобильное меню -->
<div id="sidebar-overlay" class="fixed inset-0 bg-black/50 z-40 hidden"></div>

<div
    id="sidebar" class="fixed top-0 left-0 h-full w-64 bg-white dark:bg-gray-900 text-black dark:text-white transform -translate-x-full transition-transform duration-300 z-50 shadow-lg">
    <!-- Заголовок меню -->
    <div class="flex items-center justify-between px-4 py-4 border-b dark:border-gray-700">
        <div class="flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-youtube logo-icon text-red-600 mr-2">
                <path d="M2.5 17a24.12 24.12 0 0 1 0-10 2 2 0 0 1 1.4-1.4 49.56 49.56 0 0 1 16.2 0A2 2 0 0 1 21.5 7a24.12 24.12 0 0 1 0 10 2 2 0 0 1-1.4 1.4 49.55 49.55 0 0 1-16.2 0A2 2 0 0 1 2.5 17"></path>
                <path d="m10 15 5-3-5-3z"></path>
            </svg>
            <span class="text-lg font-semibold">YouBoost</span>
        </div>
        <button data-sidebar-close class="text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white focus:outline-none">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewbox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
        </button>
    </div>

    <!-- Меню -->
    <nav class="mt-4">
        <ul class="space-y-1">
            {% for item in menu_items %}
                <li>
                    <a href="{{ path(item.route) }}" class="block px-4 py-3 hover:bg-gray-100 dark:hover:bg-gray-800 transition flex items-center">
                        <i class="{{ item.icon }} mr-3"></i>
                        {{ item.title }}
                    </a>
                </li>
            {% endfor %}

            <!-- Дополнительные разделы с выпадающим списком -->
            <li>
                <button class="w-full flex items-center justify-between px-4 py-3 text-left hover:bg-gray-100 dark:hover:bg-gray-800 transition" data-dropdown-toggle="dropdown1">
                    <div class="flex items-center">
                        <svg class="w-5 h-5 mr-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                        </svg>
                        Дополнительно
                    </div>
                    <span class="transition-transform">▼</span>
                </button>
                <ul id="dropdown1" class="hidden space-y-1 pl-8 bg-gray-50 dark:bg-gray-800">
                    <li>
                        <a href="#" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-700">Профиль</a>
                    </li>
                    <li>
                        <a href="#" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-700">Настройки</a>
                    </li>
                </ul>
            </li>
        </ul>
    </nav>

    <!-- Подвал мобильного меню -->
    <div class="absolute bottom-0 left-0 right-0 p-4 border-t dark:border-gray-700">
        <button id="theme-toggle-mobile" class="w-full flex items-center justify-center py-2 rounded-md bg-gray-100 dark:bg-gray-800 hover:bg-gray-200 dark:hover:bg-gray-700 transition">
            <svg id="theme-toggle-icon-mobile" class="w-5 h-5 mr-2" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z"></path>
            </svg>
            Сменить тему
        </button>
    </div>
</div>
